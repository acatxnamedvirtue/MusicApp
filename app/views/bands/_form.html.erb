<% action = (@band.persisted? ? band_url(@band) : bands_url) %>
<% method = (@band.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= form_auth_token %>

  <label for="name">Name</label>
  <input
    type="text"
    name="band[name]"
    id="name"
    value="<%= @band.name %>">
  <br>

  <button>Submit</button>
</form>
