<% action = (@track.persisted? ? track_url(@track) : tracks_url) %>
<% method = (@track.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <%= form_auth_token %>

  <label for="title">Title</label>
  <input
    type="text"
    name="track[title]"
    id="title"
    value="<%= @track.title %>">
  <br>

  <label for="track_number">Track Number</label>
  <input
    type="number"
    name="track[track_number]"
    id="track_number"
    value="<%= @track.track_number %>">
  <br>

  <label for="album_name">Album</label>
  <select name="track[album_id]" id="album_name">
    <% @albums.each do |album| %>
      <option
        <%= (@album == album ? "selected" : "") %>
          value="<%= album.id %>">
        <%= album.title %>
      </option>
    <% end %>
  </select>
  <br>

  <input
    type="radio"
    name="track[track_type]"
    value="Bonus"
    id="track_type_bonus"
    <%= (@track.track_type == "Bonus" ? "checked" : "") %>>
  <label for="track_type_bonus">Bonus</label>
  <input
    type="radio"
    name="track[track_type]"
    value="Regular"
    id="track_type_regular"
    <%= (@track.track_type == "Regular" ? "checked" : "") %>>
  <label for="track_type_regular">Regular</label>
  <br>

  <label for="Lyrics">Lyrics</label>
  <textarea id="Lyrics" name="track[lyrics]">
     <%= @track.lyrics %>
  </textarea>

  <br>
  <button>Submit</button>
</form>
